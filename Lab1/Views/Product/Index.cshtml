@model IReadOnlyCollection<Product>

<h2>Product List</h2>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Product Category</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.ProductCategory</td>
            <td><a href="@Url.Action("Edit", "Products", new { id = product.Id })">Edit</a></td>
            <td>
                <form asp-action="Remove" method="post">
                    <input type="hidden" name="guid" value="@product.Id" />
                    <button type="Remove" class="btn btn-danger">Remove</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<p>
    <a href="@Url.Action("Add", "Products")" class="btn btn-primary">Add New Product</a>
</p>

